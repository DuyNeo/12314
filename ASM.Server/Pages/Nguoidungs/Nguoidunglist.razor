@page "/nguoidunglist"
@using ASM.Shares
@using ASM.Server.Data
@inject INguoidungSvc _nguoidungService
<h1>Danh sách người dùng</h1>
@if(nguoidungs == null)
 {
    <p><em>Loading...</em></p>
}
else
 {
    <a href="/NguoiDungDialog/0">Them</a>
    <table class="table">
        <thead>
            <tr>
                <th>Tên đăng nhập</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Chức danh</th>
                <th>Ngày sinh</th>
                <th>Vai trò</th>
                <th>Trạng thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach(var item in nguoidungs)
     {
            <tr>
                <th>@item.UserName</th>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Title</td>
                <td>@item.IsAdmin</td>
                <td>
                    @if (item.Locked)
                    {
                        <span>Khoa</span>
                    }
                </td>
                <td>
                    <a class="btn btn-info" href="/nguoidungdialog/@item.NguoiDungId">Sua</a>
                    <a class="btn btn-info" @onclick="@(()=> Delete(item.NguoiDungId))">Xoa</a>

                </td>
            </tr>
                }
        </tbody>
    </table>
 }
@code{
    public List<Nguoidung> nguoidungs;
    protected override void OnInitialized()
    {
        nguoidungs = _nguoidungService.GetNguoiDungAll();
    }
